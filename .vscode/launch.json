{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "workspace init (default)",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "main.go",
            "args": [
                "workspace",
                "init",
                "--path",
                "./temp/polyrepo.yaml"
            ]
        },
        {
            "name": "workspace switch",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "main.go",
            "args": [
                "workspace",
                "switch",
                "--name",
                "dev",
                "--branch",
                "main"
            ]
        }
    ]
}